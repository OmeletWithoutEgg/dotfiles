#!/bin/bash

## these lines are from passmenu
prefix=${PASSWORD_STORE_DIR-~/.password-store}
password_files=( "$prefix"/**/*.gpg )
password_files=( "${password_files[@]#"$prefix"/}" )
password_files=( "${password_files[@]%.gpg}" )

password=$(printf '%s\n' "${password_files[@]}" | rofi -theme ~/.config/rofi/material.rasi -dmenu)

if [[ -z $password ]]; then
  exit 1
fi

pass -c "$password"
