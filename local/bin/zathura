#!/bin/bash

/usr/bin/zathura "$@" & disown
pid="$!"

list_window() {
  wmctrl -l -p | tr -s ' ' | cut -f 1,3 -d ' '
}

if [ -n $DISPLAY ]; then
  while ! list_window | grep -w "$pid"; do
    sleep 0.01
  done
  wid=$(list_window | grep -w "$pid" | cut -f 1 -d ' ')
  /usr/bin/wmctrl -a "$wid" -i
fi
